/* header */
div#shopify-section-header {
    position: sticky!important;
    top: 0;
  transform: translateY(0);
}

/* search */
.search-modal.modal__content {
    height: 100vh!important;
    background: rgb(199 194 183 / 97%)!important;
}

.modal__close-button.link {
    position: absolute!important;
    top: 20px!important;
    right: 30px!important;
}
/* header end */

@media screen and (min-width: 750px){
.banner__box {max-width: 55%!important;}
  
  .grid--4-col-tablet .grid__item:nth-child(1), .grid--4-col-tablet .grid__item:nth-child(4){width:32.333%;}
  .grid--4-col-tablet .grid__item:nth-child(2), .grid--4-col-tablet .grid__item:nth-child(3){width: 16.666%;}
}
a.link.list-social__link {
    padding-left: 0;
}

h2.collage-wrapper-title, .collection-list-title {
    text-align: center;
    text-transform: capitalize;
    font-weight: normal;
    font-style: normal;
    letter-spacing: 1px;
/*     font-size: 30px; */
}
@media screen and (min-width: 990px){
.title-wrapper-with-link {
    justify-content: center;
}
}

.list-menu--disclosure{
    width: 30rem!important;
}
.newsletter__wrapper.color-accent-2 h2, .newsletter__wrapper.color-accent-2, .newsletter__wrapper.color-accent-2 label{
    color: #8f8b81;
}
.newsletter-form__field-wrapper {
    border: 1px solid #8f8b81;
  color: #8f8b81;
}
.list-social {
    justify-content: flex-start!important;
}



@keyframes translateX {
  0% {
    opacity: 0;
    transform: translateX(60px);
  }
  
  80% {
    transform: translateX(-5px);
  }

  100% {
    opacity: 1;
    transform: translateX(0px);
  }
}



